<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/parent"
        >
    <com.mapbox.mapboxsdk.MapView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/mapview"
            />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/weekday" android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"
              android:layout_alignParentTop="true" android:layout_marginTop="10dp" android:textSize="40dp"
              android:textColor="@color/maintextcolor"/>
</RelativeLayout>

